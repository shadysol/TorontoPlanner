
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>YelpCamp</title>
    <!-- Link to Bootstrap 4.3.1 -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>
    

<div class="container">
	<header class="jumbotron">
		<h2 class="display-3">Here are your top 5 suggestions</h2>
	</header>
	
	<div class="row text-center" >


		

		<% for (var j = 0; j < resturaunts.length; j++) { %>
			<div class="col-md-6 col-sm-12">
				<div class="card" style="width:30rem;">
					<img src="<%= resturaunts[j].image_url %>" class="card-img-top" style="width:fluid;height:420px;">
					<div class="card-body">
						<h4 class="card-title"><%= resturaunts[j].name %></h4>
						<h4 class="card-title"><%= j+1 %></h4>
						
                            <p>
								<h6>category: 
								<% for (var i = 0; i < resturaunts[j].categories.length; i++) { %>
                                 <% if (i == +resturaunts[j].categories.length-1) { %>
									<%= resturaunts[j].categories[i].title %>
									<% } else { %>  
										<%= resturaunts[j].categories[i].title%> ,
											<% } 	
											   }%> 	
						</h6>
                            </p>
                            <p>
                                <h6>price: <%= resturaunts[j].price%></h6>	
                        <p>
                            <form action="/planner/<%=j%>" method="POST" novalidate class="validated-form" enctype="application/x-www-form-urlencoded">
								<button type="submit" name="" class="btn btn-danger ">More Info?</button>
							</form>
                        </p>

						<form action="/planner/<%=j%>" method="POST" novalidate class="validated-form" enctype="application/x-www-form-urlencoded">
							<button type="submit" name="" class="btn btn-danger">Not Interested?</button>
						</form>
					</div>
				</div>
			</div>
		<% }%>
	</div>
</div>
